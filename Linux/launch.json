    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "request": "launch",
            "type": "cppdbg",
            "program": "${workspaceFolder}/name of the executable",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "additionalSOLibSearchPath": "",
            "stopAtEntry": true,
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "",
            "miDebuggerPath": "/usr/bin/gdb",
            "targetArchitecture": "x64",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}

// Remember to use the "-exec" keyward before every command in vscode gdb
